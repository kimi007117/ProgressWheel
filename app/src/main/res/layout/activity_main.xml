<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rotate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.example.ganji.progresswheel.widget.CustomerLoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="library"/>

        <com.example.ganji.progresswheel.widget.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.ganji.progresswheel.widget.ProgressWheel2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.example.ganji.progresswheel.widget.RotateLoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
